{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,    
    "lib": [
      "es2018",
      "dom",
      "dom.Iterable"
    ],
    "outDir": "dist",
    "pretty": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node",
      "jest-prosemirror"
    ],
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "node_modules",

  ]
}
