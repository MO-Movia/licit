{
 
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,    
    "lib": [
      "es2018",
      "dom",
      "dom.Iterable"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
   "pretty": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
     "types": [
      "jest",
      "node",
      "jest-prosemirror",
      "@testing-library/jest-dom"
    ],
     "declaration": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@src/*": ["./src/*"]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["src/**/*.ts","src/**/*.js" ],
  "exclude": [
    "node_modules",
  ]
  
}